<UserControl x:Class="Chinese_Chess.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900"
             FontFamily="Georgia">

    <UserControl.Resources>

        <Style x:Key="MinimalScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="2.5"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Width" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource MinimalScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Name="TrackBackground" Height="4" Background="#E0E0E0" CornerRadius="2" VerticalAlignment="Center"/>
                            <Canvas VerticalAlignment="Center" Height="4">
                                <Border Name="PART_SelectionRange" Height="4" Background="{StaticResource PrimaryBrush}" CornerRadius="2" Visibility="Hidden"/>
                            </Canvas>
                            <Track Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <Ellipse Width="18" Height="18" Fill="{StaticResource PrimaryBrush}" Stroke="White" StrokeThickness="2">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ImageRadioStyle" TargetType="RadioButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="OuterBorder" BorderThickness="2" BorderBrush="Transparent" CornerRadius="8" Margin="5">
                            <Grid>
                                <Border CornerRadius="6" ClipToBounds="True" Height="100">
                                    <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Stretch="UniformToFill"/>
                                </Border>
                                <Border Background="#CC4E342E" VerticalAlignment="Bottom" Height="30" CornerRadius="0,0,6,6">
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#b9955688"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextDarkBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SectionDividerStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="Margin" Value="0,0,0,25"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,20,0,10">
            <TextBlock Text="Settings Menu" FontSize="40" FontWeight="Bold" 
                       Foreground="{DynamicResource TextDarkBrush}" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#D7CCC8" BlurRadius="2" ShadowDepth="2" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,0"
                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                    Click="CloseButton_Click">
                <TextBlock Text="✕" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextDarkBrush}"/>
            </Button>
        </Grid>

        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1" 
                CornerRadius="10" MaxWidth="900" Margin="40,0,40,40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="Gray" Opacity="0.2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40" Margin="2">
                <StackPanel>

                    <TextBlock Text="Sound Settings" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource SectionDividerStyle}"/>
                    <Grid Margin="0,0,0,40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Music Volume" Foreground="{DynamicResource TextGrayBrush}" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="MusicSlider" Maximum="1.0" TickFrequency="0.1" ValueChanged="MusicSlider_ValueChanged"/>
                                <TextBlock Grid.Column="1" Text="🔊" Foreground="{DynamicResource TextGrayBrush}" FontSize="18" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Sound Effects Volume" Foreground="{DynamicResource TextGrayBrush}" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="SFXSlider" Maximum="1.0" TickFrequency="0.1" ValueChanged="SFXSlider_ValueChanged"/>
                                <TextBlock Grid.Column="1" Text="🎵" Foreground="{DynamicResource TextGrayBrush}" FontSize="18" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Account Settings" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource SectionDividerStyle}"/>
                    <Grid Margin="0,0,0,40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Width="100" Height="100" Margin="0,0,30,0">
                            <Ellipse Width="100" Height="100" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="2">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="AvatarPreview" ImageSource="/Assets/ImagePiece/red_general_img.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{StaticResource PrimaryBrush}" BorderThickness="0" Style="{StaticResource PrimaryButtonStyle}" Padding="0" Click="ChangeAvatar_Click">
                                <TextBlock Text="📷" Foreground="White" FontSize="12"/>
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="15"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="Display Name" Foreground="{DynamicResource TextGrayBrush}" Margin="0,0,0,5"/>
                                    <TextBox x:Name="NameInput" Text="Enter your name..." Padding="10"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Game Settings" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource SectionDividerStyle}"/>
                    <StackPanel Margin="0,0,0,40">
                        <TextBlock Text="Piece Style" Foreground="{DynamicResource TextGrayBrush}" Margin="0,0,0,10" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <RadioButton x:Name="RadioText" Content="Text (Traditional)" GroupName="PieceStyle" Margin="0,0,30,0" Checked="PieceStyle_Checked" Foreground="{DynamicResource TextDarkBrush}"/>
                            <RadioButton x:Name="RadioImage" Content="Image (Artistic)" GroupName="PieceStyle" Checked="PieceStyle_Checked" Foreground="{DynamicResource TextDarkBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Theme Settings" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource SectionDividerStyle}"/>
                    <StackPanel Margin="0,0,0,40">
                        <TextBlock Text="Appearance Mode" Foreground="{DynamicResource TextGrayBrush}" Margin="0,0,0,10" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <RadioButton x:Name="RadioLight" Content="Light Mode" GroupName="AppTheme" Margin="0,0,30,0" Checked="AppearanceMode_Checked" Foreground="{DynamicResource TextDarkBrush}"/>
                            <RadioButton x:Name="RadioDark" Content="Dark Mode" GroupName="AppTheme" Checked="AppearanceMode_Checked" Foreground="{DynamicResource TextDarkBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Background" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource SectionDividerStyle}"/>
                    <UniformGrid Columns="3" Margin="0,0,0,40">
                        <RadioButton Content="Default" GroupName="BgGroup" Style="{StaticResource ImageRadioStyle}" 
                                     Tag="pack://application:,,,/Chinese Chess;component/Assets/Background/Background.png" 
                                     Checked="Background_Checked"/>

                        <RadioButton Content="Black &amp; White" GroupName="BgGroup" Style="{StaticResource ImageRadioStyle}" 
                                     Tag="pack://application:,,,/Chinese Chess;component/Assets/Background/blackwhite_life.jpg" 
                                     Checked="Background_Checked"/>

                        <RadioButton Content="Japanese" GroupName="BgGroup" Style="{StaticResource ImageRadioStyle}" 
                                     Tag="pack://application:,,,/Chinese Chess;component/Assets/Background/japanese.jpg" 
                                     Checked="Background_Checked"/>
                    </UniformGrid>

                    <TextBlock Text="Music Playlist" Style="{StaticResource SectionHeaderStyle}"/>
                    <Border Style="{StaticResource SectionDividerStyle}"/>
                    <Grid Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Select Track" Foreground="{DynamicResource TextGrayBrush}" Margin="0,0,0,10"/>
                            <ComboBox x:Name="MusicCombo" Padding="10,5" SelectionChanged="MusicCombo_SelectionChanged">
                                <ComboBoxItem Content="Special" Tag="Special.mp3"/>
                                <ComboBoxItem Content="Tri Ngã" Tag="TriNga~.mp3"/>
                                <ComboBoxItem Content="Track 1" Tag="1.mp3"/>
                                <ComboBoxItem Content="Track 2" Tag="2.mp3"/>
                                <ComboBoxItem Content="Track 3" Tag="3.mp3"/>
                                <ComboBoxItem Content="Track 4" Tag="4.mp3"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Border Style="{StaticResource SectionDividerStyle}" Margin="0,30,0,20"/>
                    <Button Content="SAVE ALL SETTINGS" Height="50" FontSize="18"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Stretch" Margin="0,0,0,10"
                            Click="SaveAllButton_Click"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>