<Window x:Class="Chinese_Chess.Views.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="280" Width="420"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border Background="#FDF8F0" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                    Background="Transparent" BorderThickness="0" Cursor="Hand" Click="Cancel_Click">
                <TextBlock Text="✕" FontSize="16" Foreground="Gray"/>
            </Button>

            <StackPanel VerticalAlignment="Center" Margin="20">

                <Border Width="50" Height="50" CornerRadius="25" Background="#A1887F" Margin="0,0,0,15">
                    <TextBlock Text="?" FontSize="30" FontWeight="Bold" Foreground="White" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock x:Name="TxtTitle" Text="Title" 
                           FontSize="22" FontWeight="Bold" Foreground="#4E342E"
                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock x:Name="TxtMessage" 
                           Text="Are you sure ...?" 
                           FontSize="14" Foreground="#795548"
                           TextWrapping="Wrap" TextAlignment="Center" Margin="10,0,10,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Height="40" Background="Transparent" Cursor="Hand" Click="Cancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" Background="Transparent" BorderBrush="#5D4037" BorderThickness="1.5" CornerRadius="5">
                                    <TextBlock Text="{Binding CancelText, RelativeSource={RelativeSource AncestorType=Window}}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="#5D4037" FontWeight="SemiBold"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#EEE"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Height="40" Cursor="Hand" Click="Confirm_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" Background="#5D4037" CornerRadius="5">
                                    <TextBlock Text="{Binding ConfirmText, RelativeSource={RelativeSource AncestorType=Window}}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="Bold"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>