<UserControl x:Class="Chinese_Chess.Views.ChallengeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Georgia" Foreground="{x:Null}">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#8D6E63"/>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#FDF8F0"/>
        <SolidColorBrush x:Key="SurfaceDarkBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#4E342E"/>
        <SolidColorBrush x:Key="BorderDarkBrush" Color="#D7CCC8"/>
        <SolidColorBrush x:Key="Primary10Brush" Color="#1A8D6E63"/>

        <SolidColorBrush x:Key="BackButtonBrush" Color="#D35400"/>

        <Style x:Key="StartGameButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Color="Gray" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Border.Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#D7CCC8" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DifficultyRadioStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>

            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="GroupName" Value="DifficultyGroup"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="OuterBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="Gray" Opacity="0.1"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="{TemplateBinding Tag}"
                                           FontSize="24"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="10,0,15,0"/>

                                <Border x:Name="CheckSquare"
                                        Grid.Column="2"
                                        Width="24" Height="24"
                                        BorderBrush="{StaticResource PrimaryBrush}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Background="Transparent"
                                        VerticalAlignment="Center">

                                    <TextBlock x:Name="CheckMark"
                                               Text="✓"
                                               FontSize="16" FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="Collapsed"/>
                                </Border>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="OuterBorder" Property="Background" Value="{StaticResource Primary10Brush}"/>
                                <Setter TargetName="CheckSquare" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundDarkBrush}">

        <Button Content="Back to Menu"
                FontSize="16" FontWeight="SemiBold"
                Foreground="{StaticResource BackButtonBrush}"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="30" Cursor="Hand" Panel.ZIndex="2"
                Click="BackToMenuButton_Click">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="Transparent"
                            BorderBrush="{StaticResource BackButtonBrush}"
                            BorderThickness="2"
                            CornerRadius="20"
                            Padding="20,10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource BackButtonBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="1200" Panel.ZIndex="1" Width="627">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,50">
                <TextBlock Text="Select Difficulty"
                           FontSize="60" 
                           FontWeight="Black" 
                           Foreground="{StaticResource TextDarkBrush}" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="0" Color="#D7CCC8" Direction="135" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Choose your opponent level to begin the battle."
                           FontSize="20" 
                           Foreground="{StaticResource TextDarkBrush}" 
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Typography.Capitals="AllSmallCaps" />
            </StackPanel>

            <Grid Grid.Row="1" MaxWidth="1000" Margin="0,0,-75,33" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{StaticResource SurfaceDarkBrush}"
                        BorderBrush="{StaticResource BorderDarkBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="30"
                        VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="-53,0,358,0">

                    <StackPanel x:Name="DifficultyOptions" Margin="0,0,0,0">

                        <RadioButton x:Name="OptionEasy" Style="{StaticResource DifficultyRadioStyle}" IsChecked="True" Tag="1">
                            <StackPanel>
                                <TextBlock Text="Easy" Style="{DynamicResource Heading3}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
                                <TextBlock Text="Perfect for beginners." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="OptionMedium" Style="{StaticResource DifficultyRadioStyle}" Tag="2">
                            <StackPanel>
                                <TextBlock Text="Medium" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
                                <TextBlock Text="A balanced challenge." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="OptionHard" Style="{StaticResource DifficultyRadioStyle}" Tag="3">
                            <StackPanel>
                                <TextBlock Text="Hard" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
                                <TextBlock Text="For experienced players." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
                            </StackPanel>
                        </RadioButton>

                        <Button Content="START GAME" Style="{StaticResource StartGameButtonStyle}" Margin="0,30,0,0" Click="StartGameButton_Click"/>

                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,40,0,0">
                    <Border Width="120" Height="120" CornerRadius="60" 
                        Background="{StaticResource SurfaceDarkBrush}" 
                        BorderBrush="{StaticResource BorderDarkBrush}" 
                        BorderThickness="2" 
                        Margin="0,0,0,20">

                        <TextBlock Text="✨" 
                           FontSize="80" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI Emoji" 
                           Foreground="#FF614820"/>
                    </Border>

                    <TextBlock Text="Ready for a match?" 
                               FontSize="30" FontWeight="Bold" 
                               Foreground="{StaticResource TextDarkBrush}" 
                               TextAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock Text="Your next move is critical. Select an option and prove your mastery of Chinese Chess."
                               Foreground="{StaticResource TextDarkBrush}" 
                               Opacity="0.8"
                               TextAlignment="Center" 
                               TextWrapping="Wrap" MaxWidth="350"/>
                </StackPanel>

            </Grid>
        </Grid>
        <TextBlock Text="Credits" 
                       Foreground="{StaticResource PrimaryBrush}" 
                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                       TextDecorations="Underline" Cursor="Hand" Margin="0,0,10,10"/>
    </Grid>
</UserControl>