<UserControl x:Class="Chinese_Chess.Views.ChallengeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Georgia">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#b89569"/>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1a130c"/>
        <SolidColorBrush x:Key="SurfaceDarkBrush" Color="#2a221a"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#e6d5b8"/>
        <SolidColorBrush x:Key="BorderDarkBrush" Color="#7a6345"/>
        <SolidColorBrush x:Key="Black5Brush" Color="#0000000D"/>
        <SolidColorBrush x:Key="White5Brush" Color="#00FFFFFF"/>
        <SolidColorBrush x:Key="Primary10Brush" Color="#1AB89569"/>
        <Style x:Key="StartGameButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource BackgroundDarkBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Color="Black" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Border.Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#D9A400" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DifficultyCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Black5Brush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="Black" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundDarkBrush}">
        <Image Source="/Assets/XiangquiBoard.png" Stretch="UniformToFill" Opacity="0.1"/>

        <Border Background="{StaticResource BackgroundDarkBrush}" Opacity="0.9"/>

        <Button Content="✕" 
                FontSize="36" 
                Foreground="{StaticResource TextDarkBrush}"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="20" Background="Transparent" BorderThickness="0"
                Cursor="Hand" Panel.ZIndex="2"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="1200" Margin="20" Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,50">
                <TextBlock Text="Choose your Challenge"
                           FontSize="60" 
                           FontWeight="Black" 
                           Foreground="{StaticResource TextDarkBrush}" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="0" Color="#e6d5b8" Direction="135" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Select an opponent to begin the match."
                           FontSize="20" 
                           Foreground="{StaticResource TextDarkBrush}" 
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Typography.Capitals="AllSmallCaps" />
            </StackPanel>

            <Grid Grid.Row="1" MaxWidth="1000">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="{StaticResource SurfaceDarkBrush}" 
                        BorderBrush="{StaticResource BorderDarkBrush}" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Padding="30"
                        VerticalAlignment="Top">

                    <StackPanel x:Name="DifficultyOptions" Margin="0,0,0,0">
                        <Border Style="{StaticResource DifficultyCardStyle}" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Easy" Style="{DynamicResource Heading3}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
                                    <TextBlock Text="Perfect for beginners." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="" FontSize="30" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DifficultyCardStyle}" 
                                BorderBrush="{StaticResource PrimaryBrush}" 
                                BorderThickness="2"
                                Background="{StaticResource Primary10Brush}"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Medium" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
                                    <TextBlock Text="A balanced challenge." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="" FontSize="30" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource DifficultyCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Hard" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
                                    <TextBlock Text="For experienced players." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="" FontSize="30" Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Button Content="START GAME" Style="{StaticResource StartGameButtonStyle}" Margin="0,30,0,0" Click="StartGameButton_Click"/>

                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,40,0,0">
                    <Border Width="120" Height="120" CornerRadius="60" 
                            Background="{StaticResource SurfaceDarkBrush}" 
                            BorderBrush="{StaticResource BorderDarkBrush}" 
                            BorderThickness="2" 
                            Margin="0,0,0,20">
                        <TextBlock Text="✨" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Ready for a challenge?" 
                               FontSize="30" FontWeight="Bold" 
                               Foreground="{StaticResource TextDarkBrush}" 
                               TextAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock Text="Your next move is critical. Select a difficulty level and prove your mastery of Chinese Chess."
                               Foreground="{StaticResource TextDarkBrush}" 
                               Opacity="0.8"
                               TextAlignment="Center" 
                               TextWrapping="Wrap" MaxWidth="350"/>
                </StackPanel>

            </Grid>

            <TextBlock Grid.Row="2" Text="Credits" 
                       Foreground="{StaticResource PrimaryBrush}" 
                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                       TextDecorations="Underline" Cursor="Hand" Margin="0,20,0,0"/>
        </Grid>
    </Grid>
</UserControl>