<UserControl x:Class="Chinese_Chess.Views.ChallengeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Georgia">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#b89569"/>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#1a130c"/>
        <SolidColorBrush x:Key="SurfaceDarkBrush" Color="#2a221a"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#e6d5b8"/>
        <SolidColorBrush x:Key="BorderDarkBrush" Color="#7a6345"/>
        <SolidColorBrush x:Key="Black5Brush" Color="#0000000D"/>
        <SolidColorBrush x:Key="White5Brush" Color="#00FFFFFF"/>
        <SolidColorBrush x:Key="Primary10Brush" Color="#1AB89569"/>
        <Style x:Key="StartGameButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource BackgroundDarkBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Color="Black" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Border.Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#D9A400" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

		<Style x:Key="DifficultyRadioStyle" TargetType="RadioButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Padding" Value="15"/>
			<Setter Property="Margin" Value="0,0,0,15"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="GroupName" Value="DifficultyGroup"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="RadioButton">
						<Border x:Name="OuterBorder"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="8"
								Padding="{TemplateBinding Padding}">
							<Border.Effect>
								<DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="Black" Opacity="0.1"/>
							</Border.Effect>

							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>

									<ColumnDefinition Width="Auto"/>

									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>

								<TextBlock Grid.Column="1"
										   Text="{TemplateBinding Tag}"
										   FontSize="24"
										   Foreground="{StaticResource PrimaryBrush}"
										   VerticalAlignment="Center"
										   Margin="10,0,15,0"/>

								<Border x:Name="CheckSquare"
										Grid.Column="2"
										Width="24" Height="24"
										BorderBrush="{StaticResource PrimaryBrush}"
										BorderThickness="1"
										CornerRadius="4"
										Background="Transparent"
										VerticalAlignment="Center">

									<TextBlock x:Name="CheckMark"
											   Text="✓"
											   FontSize="18" FontWeight="Bold"
											   Foreground="{StaticResource TextDarkBrush}"
											   HorizontalAlignment="Center" VerticalAlignment="Center"
											   Visibility="Collapsed"/>
								</Border>
							</Grid>
						</Border>

						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
							</Trigger>

							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
								<Setter TargetName="OuterBorder" Property="Background" Value="{StaticResource Primary10Brush}"/>

								<Setter TargetName="CheckSquare" Property="Background" Value="{StaticResource PrimaryBrush}"/>
								<Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundDarkBrush}">
        <Image Source="/Assets/XiangquiBoard.png" Stretch="UniformToFill" Opacity="0.1"/>

        <Border Background="{StaticResource BackgroundDarkBrush}" Opacity="0.9"/>

		<Button Content="Back to Menu"
                FontSize="16" FontWeight="SemiBold"
                Foreground="{StaticResource PrimaryBrush}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="20" Cursor="Hand" Panel.ZIndex="2"
                Click="BackToMenuButton_Click">

			<Button.Template>
				<ControlTemplate TargetType="Button">
					<Border x:Name="border"
							Background="Transparent"
							BorderBrush="{StaticResource PrimaryBrush}"
							BorderThickness="1"
							CornerRadius="20"
							Padding="20,10">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>

					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
							<Setter Property="Foreground" Value="{StaticResource TextDarkBrush}"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Button.Template>
		</Button>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="1200" Margin="20" Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,50">
                <TextBlock Text="Select Game Mode"
                           FontSize="60" 
                           FontWeight="Black" 
                           Foreground="{StaticResource TextDarkBrush}" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="0" Color="#e6d5b8" Direction="135" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Select an opponent type to begin the battle."
                           FontSize="20" 
                           Foreground="{StaticResource TextDarkBrush}" 
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Typography.Capitals="AllSmallCaps" />
            </StackPanel>

            <Grid Grid.Row="1" MaxWidth="1000">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

				<Border Grid.Column="0"
                        Background="{StaticResource SurfaceDarkBrush}"
                        BorderBrush="{StaticResource BorderDarkBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="30"
                        VerticalAlignment="Top">

					<StackPanel x:Name="DifficultyOptions" Margin="0,0,0,0">

						<RadioButton Style="{StaticResource DifficultyRadioStyle}" IsChecked="True">
							<StackPanel>
								<TextBlock Text="Single Player" Style="{DynamicResource Heading3}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
								<TextBlock Text="Practice against the computer." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
							</StackPanel>
						</RadioButton>

						<RadioButton Style="{StaticResource DifficultyRadioStyle}">
							<StackPanel>
								<TextBlock Text="Multiplayer" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextDarkBrush}"/>
								<TextBlock Text="Play with a friend." Foreground="{StaticResource TextDarkBrush}" Opacity="0.8"/>
							</StackPanel>
						</RadioButton>

						<Button Content="START GAME" Style="{StaticResource StartGameButtonStyle}" Margin="0,30,0,0" Click="StartGameButton_Click"/>

					</StackPanel>
				</Border>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,40,0,0">
                    <Border Width="120" Height="120" CornerRadius="60" 
                            Background="{StaticResource SurfaceDarkBrush}" 
                            BorderBrush="{StaticResource BorderDarkBrush}" 
                            BorderThickness="2" 
                            Margin="0,0,0,20">
                        <TextBlock Text="✨" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Ready for a match?" 
                               FontSize="30" FontWeight="Bold" 
                               Foreground="{StaticResource TextDarkBrush}" 
                               TextAlignment="Center" Margin="0,0,0,10"/>

                    <TextBlock Text="Your next move is critical. Select an option and prove your mastery of Chinese Chess."
                               Foreground="{StaticResource TextDarkBrush}" 
                               Opacity="0.8"
                               TextAlignment="Center" 
                               TextWrapping="Wrap" MaxWidth="350"/>
                </StackPanel>

            </Grid>

            <TextBlock Grid.Row="2" Text="Credits" 
                       Foreground="{StaticResource PrimaryBrush}" 
                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                       TextDecorations="Underline" Cursor="Hand" Margin="0,20,0,0"/>
        </Grid>
    </Grid>
</UserControl>